#include<iostream>
using namespace std;
int main (){
	int dayNumber;
	cout<<"Enter a number between 1 to 7:";
	cin>>dayNumber;
	switch (dayNumber){
		case 1:
		cout<<"Monday\n:";
		break;
		case 2:
		cout<<"Tuesday\n:";
		break;
		case 3:
		cout<<"Wenesday\n:";
		break;
		case 4:
		cout<<"Thursday\n:";
		break;
		case 5:
		cout<<"Firday\n:";
		break;
		case 6:
		cout<<"Saturday\n:";
		break;
		case 7:
		cout<<"Sunday\n:";
		break;
		default:
		cout<<"Ivalid input! Please enter a number between 1 to 7.\n";
		break;
	}
	return 0;
}
